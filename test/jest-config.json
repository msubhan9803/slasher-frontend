{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "roots": ["<rootDir>/src"],
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "globalSetup": "./test/setup.ts",
  "globalTeardown": "./test/teardown.ts",
  "maxWorkers": 1,
  "maxConcurrency": 1,
  "restoreMocks": true,
  "testTimeout": 10000
}
